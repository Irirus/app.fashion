<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#A6FDFBFB"
    tools:context=".CreateActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/llhai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/llhai" />
        <ImageView
            android:id="@+id/tammot"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/sb"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/hinh" />

        <ImageView
            android:id="@+id/tamhai"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/llmot"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/llmot" />

    </LinearLayout>


    <ImageView
        android:id="@+id/hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="10dp"
        android:onClick="launchHatActivity"
        app:srcCompat="@drawable/hat" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hat"
        android:layout_marginLeft="110dp"
        android:onClick="launchShirtActivity"
        app:srcCompat="@drawable/shirtm" />

    <ImageView
        android:id="@+id/bag"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:baselineAligned="false"
        android:onClick="launchBagActivity"
        app:srcCompat="@drawable/handbag" />



</LinearLayout>
    <ImageView
        android:id="@+id/trousers"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_gravity=""
        android:layout_below="@+id/shirt"
        android:layout_marginLeft="100dp"
        android:onClick="launchTrousersActivity"
        app:srcCompat="@drawable/pant" />

    <ImageView
        android:id="@+id/shoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_below="@id/trousers"
        android:onClick="launchShoeActivity"
        app:srcCompat="@drawable/shoes" />

    <TextView
        android:layout_width="502dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#0A8372"
        android:text="" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/createbtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:onClick="launchCreateActivity"
            app:srcCompat="@drawable/create" />

        <ImageButton
            android:id="@+id/savebtn"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:onClick="launchSaveActivity"
            app:srcCompat="@drawable/heartbt" />

        <ImageButton
            android:id="@+id/searchbtn"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:onClick="launchSearchActivity"
            app:srcCompat="@drawable/search" />

        <ImageButton
            android:id="@+id/mebt"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:onClick="launchSaveActivity"
            app:srcCompat="@drawable/me" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"
            android:text="Create" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:gravity="center"
            android:text="Save" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"
            android:text="Search" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"
            android:text="home" />
    </LinearLayout>





    <ImageView
        android:id="@+id/shoot"
        android:layout_width="65dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/file" />


</LinearLayout>
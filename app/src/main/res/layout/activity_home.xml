<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F7F7"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/llhai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/llhai" />
        <ImageView
            android:id="@+id/tammot"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/sb"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/hinh" />

        <ImageView
            android:id="@+id/tamhai"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/llmot"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/llmot" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:background="#0A8372"

            android:gravity="center"

            android:text="NEWS" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"

            android:text="ARTICLES" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="@android:string/emptyPhoneNumber"
            android:onClick="launchWebView1"
            app:srcCompat="@drawable/bp" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="@android:string/emptyPhoneNumber"
            android:onClick="launchWebView3"
            app:srcCompat="@drawable/iu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:onClick="launchWebView4"
            app:srcCompat="@drawable/nhi" />

        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:onClick="launchWebView6"
            app:srcCompat="@drawable/tshirt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:onClick="launchWebView5"
            app:srcCompat="@drawable/somi" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:onClick="launchWebView2"
            app:srcCompat="@drawable/giolanh" />
    </LinearLayout>

    <TextView
        android:id="@+id/chen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#0A8372"
        android:layout_gravity="center"
        android:text="" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/createbtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:onClick="launchCreateActivity"
            app:srcCompat="@drawable/create" />

        <ImageButton
            android:id="@+id/savebtn"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:onClick="launchSaveActivity"
            app:srcCompat="@drawable/heartbt" />

        <ImageButton
            android:id="@+id/searchbtn"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:onClick="launchSearchActivity"
            app:srcCompat="@drawable/search" />

        <ImageButton
            android:id="@+id/mebt"

            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:onClick="launchSaveActivity"
            app:srcCompat="@drawable/me" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"
            android:text="Create" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:background="#0A8372"
            android:gravity="center"
            android:text="Save" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"
            android:text="Search" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#0A8372"
            android:gravity="center"
            android:text="home" />
    </LinearLayout>


</LinearLayout>